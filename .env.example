# ==============================================
# QUIKPAY PROJECT ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================

# Private key for deployment (WITHOUT 0x prefix)
# ⚠️  CRITICAL: Keep this secret and secure!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Lisk Sepolia Testnet RPC URLs
LISK_SEPOLIA_RPC_URL=https://rpc.sepolia-api.lisk.com
LISK_SEPOLIA_RPC_URL_BACKUP=https://rpc.sepolia-api.lisk.com

# Lisk Mainnet RPC URLs
LISK_RPC_URL=https://rpc.api.lisk.com
LISK_RPC_URL_BACKUP=https://rpc.api.lisk.com

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Deployed QuikPay contract address on Lisk Sepolia
QUIKPAY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ==============================================
# EXPLORER & VERIFICATION
# ==============================================

# Blockscout API Key (Lisk Sepolia/Mainnet) for verification
BLOCKSCOUT_API_KEY=your_blockscout_api_key_here

# Lisk explorer URLs
LISK_SEPOLIA_EXPLORER_URL=https://sepolia-blockscout.lisk.com
LISK_EXPLORER_URL=https://blockscout.lisk.com

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Web app configuration
NEXT_PUBLIC_CHAIN_ID=4202
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_RPC_URL=https://rpc.sepolia-api.lisk.com

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here


# Optional: Frontend RPC URL override used by viem/wagmi
RPC_URL=https://rpc.sepolia-api.lisk.com

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Gas settings for deployment
GAS_LIMIT=2000000
MAX_FEE_PER_GAS=20000000000
MAX_PRIORITY_FEE_PER_GAS=1000000000

# Test account addresses (optional)
TEST_ACCOUNT_1=0x...
TEST_ACCOUNT_2=0x...

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# Alchemy API Key (alternative RPC provider)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API Key (alternative RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
